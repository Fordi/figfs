BYTE_ENABLED = true
NATIVE_ENABLED = false

CFLAGS += -fPIC -D_FILE_OFFSET_BITS=64 -pthread -I. -DPIC -DNATIVE_CODE
OCAMLFLAGS += -thread

GENERATED_FILES[] =
	Fuse_bindings_stubs.c
	Fuse_bindings.ml
	Fuse_bindings.mli
	Fuse_bindings.h

C_OBJECTS = Fuse_bindings_stubs.o Fuse_util.o Unix_util_stubs.o

OCAML_OBJECTS[] =
	Fuse_bindings
	Result
	Fuse_lib
	Fuse
	Unix_util

OCAML_BYTE_OBJECTS = $(addsuffix .cmo, $(OCAML_OBJECTS))
OCAML_NATIVE_OBJECTS = $(addsuffix .cmx, $(OCAML_OBJECTS))
OCAML_CODE_OBJECTS = $(addsuffix .o, $(OCAML_OBJECTS))
OCAML_INTERFACES = $(addsuffix .cmi, $(OCAML_OBJECTS))

$(GENERATED_FILES): Fuse_bindings.idl
	camlidl -header $^

libfusestub.a: $(C_OBJECTS)
	ar rcs $@ $^

dllfuse.so: $(C_OBJECTS)
	gcc -o $@ -shared $(C_OBJECTS) -lfuse

fuse.cmxa fuse.a: $(OCAML_NATIVE_OBJECTS) libfusestub.a
	ocamlopt -a -thread -linkall -cclib -lfusestub -cclib -lfuse -cclib -lcamlidl -o $@ $(OCAML_NATIVE_OBJECTS)

fuse.cma: $(OCAML_BYTE_OBJECTS) libfusestub.a dllfuse.so
	ocamlc -a -thread -dllib dllfuse.so -custom -linkall bigarray.cma -cclib -lfusestub -cclib -lfuse -cclib -lcamlidl -o $@ $(OCAML_BYTE_OBJECTS)

FILES = $(OCAML_OBJECTS) Fuse_bindings_stubs Fuse_util Unix_util_stubs fusexmp

clean:
	rm -f dllfuse.so libfusestub.a fusexmp
	rm -f fuse.cma fuse.cmxa fuse.a
	rm -f $(filter-proper-targets $(glob $(addsuffix .*, $(FILES))))

USE_OCAMLFIND = true

OCAMLPACKS[] =
	unix
	threads
	bigarray

OCAML_LIBS[] =
	fuse

OCamlProgram(fusexmp, fusexmp)

.DEFAULT: $(if $(BYTE_ENABLED), fuse.cma) \
          $(if $(NATIVE_ENABLED), fuse.cmxa) \
          fusexmp
