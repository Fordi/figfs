.PHONY: all clean

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAMLINCLUDES += ../zlib ../git ../fuse
OCAML_LIBS += ../zlib/zlib ../git/git ../fuse/Fuse
OCAMLFLAGS += -thread

FILES[] =
	figfs

USE_OCAMLFIND = true

OCAMLPACKS[] =
	unix
	threads
	bigarray

OCamlProgram(figfs, $(FILES))

.DEFAULT: figfs

all: .DEFAULT

clean:
	rm -f figfs figfs.run figfs.opt
	rm -f $(filter-proper-targets $(glob $(addsuffix .*, $(FILES))))
